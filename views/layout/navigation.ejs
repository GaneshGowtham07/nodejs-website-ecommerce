<header class="navbar-header">
    <nav class="navbar">
        <ul class="navbar-list">
            <li class="navbar-items">
                <a href="/" class="<% path === '/' ? 'active' : '' %>">Shop</a>
            </li>
            <li class="navbar-items">
                <a href="/product" class="<% path === '/product' ? 'active' : '' %>">Product</a>
            </li>
            <% if (isAuthenticated) { %>
            <li class="navbar-items">
                <a href="/cart" class="<% path === '/cart' ? 'active' : '' %>">Cart</a>
            </li>
            <li class="navbar-items">
                <a href="/orders" class="<% path === '/orders' ? 'active' : '' %>">Orders</a>
            </li>
            <li class="navbar-items">
                <a href="/checkout" class="<% path === '/checkout' ? 'active' : '' %>">Checkout</a>
            </li>
           
            <li class="navbar-items">
                <a href="/admin/add-product" class=" <%= path === '/admin/add-product' ? 'active' : '' %> ">add-product</a>
            </li>
            <li class="navbar-items">
                <a href="/admin/product" class=" <%= path === '/admin/product' ? 'active' : '' %> ">Admin product</a>
            </li>
            <% } %>
            <% if (!isAuthenticated) { %>
                <li class="main-header__item">
                   
                    <a class="<%= path === '/login' ? 'active' : '' %>" href="/login">Login</a>
                </li>
                <li class="main-header__item">
                    <a class="<%= path === '/signup' ? 'active' : '' %>" href="/signup">Signup</a>
                </li>
            <% } else { %>
                <li class="main-header__item">
                    <form action="/logout" method="post">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <button type="submit">Logout</button>
                    </form>
                </li>
            <% } %>
        </ul>
    </nav>
</header>
